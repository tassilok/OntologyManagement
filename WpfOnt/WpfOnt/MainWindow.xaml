<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:View="clr-namespace:WpfOnt.View" xmlns:viewModel="clr-namespace:WpfOnt.ViewModel"
        x:Class="WpfOnt.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewModel:MainWindowModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="0">
            <View:TypeTree Grid.Column="0" SelectedNode="TypeTree_OnSelectedNode"/>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="1">
            <View:OItemList Grid.Column="1" DataContext="{Binding MainData}" />
                
        </Border>
    </Grid>
</Window>
